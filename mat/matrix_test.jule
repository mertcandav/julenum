use "std/testing"

#test
fn testMatrixIsZero(t: &testing::T) {
	mut x := New[int](0, 0)
	if !x.IsZero() {
		t.Errorf("IsZero() = false, when Dims() == (0, 0)")
	}
	x = New[int](2, 2)
	if !x.IsZero() {
		t.Errorf("IsZero() = false, when Dims() == (2, 2)")
	}
}